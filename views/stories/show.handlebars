<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}</h3>
        <small>{{{editIcon story.user.id user.id story.id false}}}</small>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
                <!-- 3{ - with parsing html-->
                {{{story.body}}}
            </div>
        </div>

        {{#if story.allowComments}}
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Comments</span>

                    {{#if user}}
                        <form action="/stories/comment/{{story.id}}" method="post">
                            <div class="input-field">
                                <textarea name="commentBody" class="materialize-textarea"></textarea>
                                <label> Add Comment</label>
                            </div>
                            <input type="submit" class="btn" value="Submit">
                        </form>
                    {{else}}
                        <p>Please <a href="/auth/login">log</a> in to leave comment</p>
                    {{/if}}
                </div>
            </div>

            {{#each story.comments}}
                <div class="card">
                    <div class="card-content">

                        <h5>{{commentBody}}</h5>
                        <div class="chip">
                            <img src="/img/face2.png" alt="">
                            <a href="/stories/user/{{commentUser.id}}">
                                {{commentUser.name}}
                            </a>
                        </div>
                        <br>
                        <small>Posted: {{formatDate commentDate 'MMMM Do YYYY'}}</small>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
    <div class="col s12 m3">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                    {{story.user.name}}
                </span>
                <img src="/img/face2.png" alt="" class="circle responsive-img">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user.id}}">More from {{story.user.name}}</a>
            </div>
        </div>
    </div>
</div>